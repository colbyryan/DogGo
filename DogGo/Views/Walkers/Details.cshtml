@model DogGo.Models.ViewModels.WalkerFormViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Walker</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Walker.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.Neighborhood)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Walker.Neighborhood.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            <img class="bg-info" src="@Model.Walker.ImageUrl" alt="avatar" />
        </dd>
    </dl>
</div>
<div>
    <h3>Walks</h3>
    @foreach(Walk walk in Model.Walks)
    {
        <p>@walk.Duration</p>
    }
</div>
<div>
    <a href="/walkers/edit/@Model.Walker.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
